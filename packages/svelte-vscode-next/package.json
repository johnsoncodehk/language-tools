{
	"private": true,
	"name": "vscode-svelte",
	"version": "0.0.1",
    "displayName": "Svelte for VS Code Next",
    "publisher": "svelte",
	"engines": {
		"vscode": "^1.67.0"
	},
	"activationEvents": [
		"onLanguage:svelte"
	],
	"main": "dist/src/extension",
	"contributes": {
        "typescriptServerPlugins": [
            {
                "name": "typescript-svelte-plugin-next",
                "enableForWorkspaceTypeScriptVersions": true
            }
        ],
		"commands": [
			{
				"command": "svelte.action.showVirtualFiles",
				"title": "Show Virtual Files",
				"category": "Svelte (Debug)"
			}
		],
		"languages": [
			{
				"id": "svelte",
				"extensions": [
					".svelte"
				]
			}
		]
	},
	"devDependencies": {
		"@types/vscode": "1.67.0",
		"vsce": "latest"
	},
	"dependencies": {
		"svelte-language-server-next": "0.0.1",
		"@volar/vscode-language-client": "^1.0.17",
		"typesafe-path": "^0.2.2",
        "typescript-svelte-plugin-next": "0.0.1",
		"vscode-languageclient": "^8.0.2"
	}
}
